{
	"version": "2.2.1",
	"compilerOptions": {
		"declaration": false,
		"emitDecoratorMetadata": true,
		"experimentalDecorators": true,
		"module": "umd",
		"lib": [
			"dom",
			"es5",
			"es2015.iterable",
			"es2015.symbol",
			"es2015.symbol.wellknown"
		],
		"moduleResolution": "node",
		"noImplicitAny": true,
		"noImplicitThis": true,
		"outDir": "_build/",
		"removeComments": false,
		"sourceMap": true,
		"strictNullChecks": true,
		"target": "es5"
	},
	"include": [
		"./src/**/*.ts",
		"./src/examples/**/*.ts",
		"./tests/**/*.ts"
	],
	"exclude": [
		"_build",
		"dist",
		"node_modules"
	]
}
